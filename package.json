{
  "name": "napster",
  "version": "1.0.0",
  "author": {
    "name": "anderslatif"
  },
  "description": "My music player",
  "private": true,
  "main": "main.js",
  "scripts": {
    "svelte-build": "rollup -c",
    "svelte-dev": "rollup -c -w",
    "electron-dev": "NODE_ENV=dev electron .",
    "start-dev": "concurrently npm:svelte-dev npm:electron-dev",
    "start": "sirv public --no-clear",
    "pack": "electron-builder --dir",
    "dist": "npm run svelte-build && electron-builder"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "concurrently": "^6.2.0",
    "electron": "^13.1.5",
    "electron-builder": "^22.11.7",
    "electron-reload": "^1.5.0",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sirv-cli": "^1.0.0",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "dotenv": "^9.0.2",
    "ffmpeg": "^0.0.4",
    "genius-lyrics-api": "^3.0.6",
    "howler": "^2.2.1",
    "music-metadata": "^7.8.8",
    "nedb": "^1.8.0"
  },
  "build": {
    "appId": "com.andl.napster",
    "productName": "Napster",
    "mac": {
      "icon": "public/napster_icon.png",
      "fileAssociations": [
        {
          "ext": [
            "mp3",
            "mpeg",
            "opus",
            "ogg",
            "oga",
            "wav",
            "aac",
            "caf",
            "m4a",
            "m4b",
            "mp4",
            "weba",
            "webm",
            "dolby",
            "flac"
          ]
        }
      ]
    },
    "files": [
      "!data.db",
      "!dev/*",
      "!testhtml"
    ]
  }
}
